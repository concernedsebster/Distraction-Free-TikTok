{
  "manifest_version": 3,
  "name": "Distraction-Free TikTok",
  "version": "1.0",
  "description": "Hides the For You page, comments, related videos, and disables autoplay.",
  "permissions": [
  "activeTab",
  "scripting"
],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
  {
    "matches": ["*://www.tiktok.com/*"],
    "js": ["dist/inject.js"],
    "run_at": "document_end"
  }
],
"web_accessible_resources": [
  {
    "resources": ["dist/content.js"],
    "matches": ["*://www.tiktok.com/*"]
  }
],
  "icons": {
    "16": "default_icon.png",
    "36": "default_icon.png",
    "48": "default_icon.png",
    "128": "default_icon.png" 
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "default_icon.png",
      "36": "default_icon.png",
      "48": "default_icon.png",
      "128": "default_icon.png"
    }
  }
}